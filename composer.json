{
  "name": "kod/soap-http-client",
  "description": "SOAP client based on Guzzle",
  "type": "library",
  "license": "MIT",
  "version": "1.0.0",
  "authors": [
    {
      "name": "Konstantin Deryabin",
      "email": "kderyabin@orange.fr",
      "role": "Developer"
    }
  ],
  "keywords": ["SOAP", "Guzzle", "PSR 7"],
  "require": {
    "php": "^7.2",
    "guzzlehttp/guzzle": "^6",
    "psr/log": "~1.0.0",
    "psr/http-message": "^1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "~3.3.0",
    "phpunit/phpunit": "^8"
  },
  "config": {
    "bin-dir": "bin",
    "vendor-dir": "vendor"
  },
  "autoload": {
    "psr-4": {
      "Kod\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kod\\Tests\\": "tests/src"
    }
  },
  "scripts": {
    "test": [
      "@cs",
      "@tu"
    ],
    "cs": [
      "env ./bin/phpcs --colors --encoding=utf-8 --standard=ruleset.xml --runtime-set ignore_warnings_on_exit 1  ./src"
    ],
    "cs-fix": [
      "env ./bin/phpcbf --encoding=utf-8 --standard=ruleset.xml  -n --runtime-set ignore_warnings_on_exit 1 --ignore=vendor/ src"
    ],
    "tu": [
      "env ./bin/phpunit --testdox  -v -c tests/phpunit.xml"
    ],
    "tu-cover": [
      "env ./bin/phpunit --testdox -v -c tests/phpunit-cover.xml"
    ]
  }
}
